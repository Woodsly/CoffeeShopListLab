@model List<Product>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

@{
    foreach(Product p in Model)
    {
        <div>
            <h2>@p.Name</h2>
            <p>$@p.Price</p>
            <a asp-controller="Product" asp-action="ProductDetails" asp-route-productId="@p.Id">Click to view more</a>
        </div>
    }

}