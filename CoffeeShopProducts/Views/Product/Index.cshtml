@model List<Product>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
@{
    ViewData["Title"] = "The Coffee Shop";
}

<div class="text-center">
    <h1 class="display-4">Welcome to The Coffee Shop</h1>
    <h2>Check out all of our <i>drinks</i> below</h2>
</div>

@{
    foreach(Product p in Model)
    {
        <div>
            <h2>@p.Name</h2>
            <p>$@p.Price</p>
            <a asp-controller="Product" asp-action="ProductDetails" asp-route-productId="@p.Id">Click to view more</a>
        </div>
    }

}